<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HumidityActivity">


    <TextView
        android:id="@+id/humLastUpdatedTextview2"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logoTopImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/humidifierUseHistoryButton"
        android:layout_width="299dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="VIEW HUMIDIFIER USE HISTORY"
        app:layout_constraintBottom_toTopOf="@+id/humRangeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperatureTitleTextView" />

    <Button
        android:id="@+id/humidityHistoryButton"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="VIEW HUMIDITY SENSOR HISTORY"
        app:layout_constraintBottom_toTopOf="@+id/logoBottomImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/highHumRangeTextView"
        android:layout_width="82dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="32dp"
        android:text="HIGH"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/highMoistureEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.869"
        app:layout_constraintStart_toEndOf="@+id/lowHumRangeTextView"
        app:layout_constraintTop_toBottomOf="@+id/humRangeTextView" />

    <TextView
        android:id="@+id/lowHumRangeTextView"
        android:layout_width="82dp"
        android:layout_height="22dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="LOW"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/tempRangeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humRangeTextView" />

    <Button
        android:id="@+id/ghPercentButton"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="%"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/ghHumTextView"
        app:layout_constraintStart_toEndOf="@+id/ghHumTextView" />


    <TextView
        android:id="@+id/ghHumTextView"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:ems="10"
        android:inputType="number"
        android:text="24.00"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greenhouseTextView" />

    <TextView
        android:id="@+id/outdoorHumTextView"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:ems="10"
        android:inputType="number"
        android:text="18"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@+id/ghPercentButton"
        app:layout_constraintEnd_toStartOf="@+id/outPercentButton"
        app:layout_constraintTop_toBottomOf="@+id/outdoorTextView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/outPercentButton"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="%"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/outdoorHumTextView"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/humidityTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="HUMIDITY"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoTopImageView" />

    <TextView
        android:id="@+id/greenhouseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:text="GREENHOUSE"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/outdoorTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humidityTitleTextView" />

    <TextView
        android:id="@+id/outdoorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="8dp"
        android:text="OUTDOOR"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/greenhouseTextView"
        app:layout_constraintStart_toEndOf="@+id/greenhouseTextView"
        app:layout_constraintTop_toBottomOf="@+id/humidityTitleTextView" />

    <ImageView
        android:id="@+id/logoTopImageView"
        android:layout_width="113dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="148dp"
        android:layout_marginRight="148dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/igro_logo" />

    <TextView
        android:id="@+id/humControlTextView"
        android:layout_width="157dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="false"
        android:foregroundGravity="left"
        android:freezesText="false"
        android:gravity="start|left"
        android:paddingTop="8dp"
        android:text="HUMIDIFIER CONTROL"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/humidifierUseHistoryButton"
        app:layout_constraintEnd_toStartOf="@+id/humSwitch"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outdoorHumTextView"
        app:layout_constraintVertical_bias="0.117" />

    <Switch
        android:id="@+id/humSwitch"
        android:layout_width="113dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:text="OFF / ON"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorLink="@color/colorAccent"
        android:textOff="OFF"
        android:textOn="ON"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/humidifierUseHistoryButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outdoorHumTextView"
        app:layout_constraintVertical_bias="0.118" />

    <TextView
        android:id="@+id/humRangeTextView"
        android:layout_width="171dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="HUMIDITY RANGE"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humidityTitleTextView" />

    <ImageView
        android:id="@+id/logoBottomImageView"
        android:layout_width="62dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/igro_justleaf" />

    <EditText
        android:id="@+id/lowHumEditText"
        android:layout_width="79dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="lowerHumLimit"
        android:ems="20"
        android:gravity="bottom|center|center_horizontal|center_vertical"
        android:hint="Lower Limit"
        android:inputType="number|numberDecimal"
        android:saveEnabled="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorPrimary"
        android:textIsSelectable="true"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/lowHumRangeTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lowHumRangeTextView"
        tools:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/highHumEditText"
        android:layout_width="79dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:contentDescription="highHumLimit"
        android:ems="20"
        android:foregroundGravity="bottom|center_vertical|center|center_horizontal"
        android:gravity="bottom|clip_horizontal|center|center_horizontal|center_vertical"
        android:hint="Upper Limit"
        android:inputType="number|numberDecimal"
        android:saveEnabled="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorAccent"
        android:textIsSelectable="true"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/highHumRangeTextView"
        app:layout_constraintTop_toBottomOf="@+id/highHumRangeTextView"
        tools:textColor="@color/colorAccent" />


    <android.support.constraint.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.constraint.Group
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/setHumidityRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="SET RANGE"
        app:layout_constraintBottom_toTopOf="@+id/humTableCardView"
        app:layout_constraintEnd_toStartOf="@+id/highHumEditText"
        app:layout_constraintStart_toEndOf="@+id/lowHumEditText"
        app:layout_constraintTop_toBottomOf="@+id/humRangeTextView" />


</android.support.constraint.ConstraintLayout>

