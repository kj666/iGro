<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UvIndexActivity">

    <ImageView
        android:id="@+id/leafLogoTempView2"
        android:layout_width="78dp"
        android:layout_height="62dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/igro_justleaf" />

    <android.support.v7.widget.CardView
        android:id="@+id/highUvCardView"
        android:layout_width="193dp"
        android:layout_height="34dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <android.support.v7.widget.CardView
        android:id="@+id/lowUvCardView"
        android:layout_width="182dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toStartOf="@+id/highUvCardView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <Button
        android:id="@+id/nmUvOutButton"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="nm"
        android:textAlignment="center"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <TextView
        android:id="@+id/uvNumberOutView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:ems="10"
        android:inputType="number"
        android:text="320"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintEnd_toStartOf="@+id/nmUvOutButton"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <Button
        android:id="@+id/indexUvGreenButton"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="96dp"
        android:text="INDEX"
        android:textAlignment="center"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/uvNumberGreenView"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <Button
        android:id="@+id/indexUvOutButton"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="INDEX"
        android:textAlignment="center"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <Button
        android:id="@+id/nmUvGreenButton"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="52dp"
        android:text="nm"
        android:textAlignment="center"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/uvNumberGreenView"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <TextView
        android:id="@+id/uvNumberGreenView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="52dp"
        android:background="@null"
        android:ems="10"
        android:inputType="number"
        android:text="320"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <TableLayout
        android:id="@+id/tableTempCardView"
        android:layout_width="228dp"
        android:layout_height="143dp"
        android:layout_marginTop="304dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView">

        <TableRow
            android:id="@+id/titleTableRowView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="left"
                android:text="Date"
                android:textSize="20dp"

                />

            <TextView
                android:layout_marginLeft="50dp"
                android:text="째C"
                android:textSize="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="left"
                android:text="20/02/2019"
                android:textSize="20dp"

                />

            <TextView
                android:layout_marginLeft="50dp"
                android:text="22째C"
                android:textSize="20dp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="left"
                android:text="21/02/2019"
                android:textSize="20dp"

                />

            <TextView
                android:layout_marginLeft="50dp"
                android:text="19째C"
                android:textSize="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="left"
                android:text="22/02/2019"
                android:textSize="20dp"

                />

            <TextView
                android:layout_marginLeft="50dp"
                android:text="23째C"
                android:textSize="20dp" />
        </TableRow>


    </TableLayout>

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphTempCardView2"
        android:layout_width="180dp"
        android:layout_height="143dp"
        android:layout_marginTop="304dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <TextView
        android:id="@+id/tableTempTextView2"
        android:layout_width="85dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="TABLE"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toEndOf="@+id/graphTempTextView2"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <TextView
        android:id="@+id/graphTempTextView2"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="276dp"
        android:text="GRAPH"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <TextView
        android:id="@+id/highUvView"
        android:layout_width="82dp"
        android:layout_height="27dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="HIGH"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <TextView
        android:id="@+id/uvRangeTextView"
        android:layout_width="171dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="UV RANGE"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/highUvView"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toEndOf="@+id/lowUvTextView"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <TextView
        android:id="@+id/lowUvTextView"
        android:layout_width="82dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="188dp"
        android:text="LOW"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <Switch
        android:id="@+id/switchuVView"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="ON/OF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toEndOf="@+id/uvControlTextView"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <TextView
        android:id="@+id/uvControlTextView"
        android:layout_width="173dp"
        android:layout_height="31dp"
        android:layout_marginTop="148dp"
        android:text="UV CONTROL"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <TextView
        android:id="@+id/outdoorUvTextView"
        android:layout_width="154dp"
        android:layout_height="33dp"
        android:layout_marginTop="12dp"
        android:text="OUTDOOR"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <TextView
        android:id="@+id/greenhouseUvView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="GREENHOUSE"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UvTextView" />

    <ImageView
        android:id="@+id/igroLogoUvView"
        android:layout_width="113dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/igro_logo" />

    <TextView
        android:id="@+id/UvTextView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="UV INDEX"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/igroLogoUvView"
        app:layout_constraintVertical_chainStyle="packed" />
</android.support.constraint.ConstraintLayout>