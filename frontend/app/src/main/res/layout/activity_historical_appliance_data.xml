<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoricalApplianceActivity">

    <TextView
        android:id="@+id/historicalApplianceTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_above="@+id/applianceEventListView"
        android:layout_below="@+id/logoTopImageView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="52dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="HISTORICAL HEATER USE"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/logoTopImageView2"
        android:layout_width="120dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="147dp"
        android:layout_marginLeft="147dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="144dp"
        android:layout_marginRight="144dp"
        app:srcCompat="@drawable/igro_logo" />

    <ListView
        android:id="@+id/applianceEventListView"
        android:layout_width="match_parent"
        android:layout_height="444dp"
        android:layout_above="@+id/recordLimitTitleTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/listOnOffTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_above="@+id/applianceEventListView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="0dp"
        android:text="Status"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/listDateTitleTextView"
        android:layout_width="125dp"
        android:layout_height="62dp"
        android:layout_above="@+id/applianceEventListView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/listUserNameTitleTextView"
        android:layout_toLeftOf="@+id/listUserNameTitleTextView"
        android:gravity="clip_vertical"
        android:text="Date and Time"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/listCounterTitleTextView"
        android:layout_width="40dp"
        android:layout_height="63dp"
        android:layout_above="@+id/applianceEventListView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="-1dp"
        android:layout_toStartOf="@+id/listDateTitleTextView"
        android:layout_toLeftOf="@+id/listDateTitleTextView"
        android:gravity="clip_vertical"
        android:text="No."
        android:textSize="14sp" />

    <TextView
        android:id="@+id/listUserNameTitleTextView"
        android:layout_width="88dp"
        android:layout_height="53dp"
        android:layout_above="@+id/applianceEventListView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/listTimeSinceLastTriggerTitleTextView"
        android:layout_toLeftOf="@+id/listTimeSinceLastTriggerTitleTextView"
        android:text="Username"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/listTimeSinceLastTriggerTitleTextView"
        android:layout_width="88dp"
        android:layout_height="44dp"
        android:layout_above="@+id/applianceEventListView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/listOnOffTitleTextView"
        android:layout_toLeftOf="@+id/listOnOffTitleTextView"
        android:text="Hours Since\nLast Trigger" />

    <TextView
        android:id="@+id/recordLimitTitleTextView"
        android:layout_width="282dp"
        android:layout_height="33dp"
        android:layout_above="@+id/refreshButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/recordLimitEditText"
        android:layout_toLeftOf="@+id/recordLimitEditText"
        android:gravity="center_vertical"
        android:text="Input The Number Of Records To Display"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/recordLimitEditText"
        android:layout_width="65dp"
        android:layout_height="59dp"
        android:layout_below="@+id/applianceEventListView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="82dp"
        android:ems="10"
        android:inputType="number|text"
        android:textSize="14sp" />

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="158dp"
        android:layout_marginLeft="158dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="106dp"
        android:layout_marginBottom="27dp"
        android:text="Refresh"
        android:textSize="16sp" />


</RelativeLayout>