<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/listItemOnOffStatusTextView"
        android:layout_width="32dp"
        android:layout_height="15dp"
        android:layout_above="@+id/applianceEventListView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="31dp"
        android:gravity="start|top"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/listItemDateTextView"
        android:layout_width="134dp"
        android:layout_height="15dp"
        android:layout_above="@+id/applianceEventListView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="31dp"
        android:layout_toStartOf="@+id/listItemUserNameTextView"
        android:layout_toLeftOf="@+id/listItemUserNameTextView"
        android:gravity="start|top"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/listItemCounterTextView"
        android:layout_width="22dp"
        android:layout_height="15dp"
        android:layout_above="@+id/applianceEventListView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="31dp"
        android:layout_toStartOf="@+id/listItemDateTextView"
        android:layout_toLeftOf="@+id/listItemDateTextView"
        android:gravity="start|top"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/listItemUserNameTextView"
        android:layout_width="110dp"
        android:layout_height="15dp"
        android:layout_above="@+id/applianceEventListView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="31dp"
        android:layout_toStartOf="@+id/listItemTimeSinceLastTriggerTextView"
        android:layout_toLeftOf="@+id/listItemTimeSinceLastTriggerTextView"
        android:gravity="start|top"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/listItemTimeSinceLastTriggerTextView"
        android:layout_width="74dp"
        android:layout_height="15dp"
        android:layout_above="@+id/applianceEventListView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="31dp"
        android:layout_toStartOf="@+id/listItemOnOffStatusTextView"
        android:layout_toLeftOf="@+id/listItemOnOffStatusTextView"
        android:gravity="start|top"
        android:textSize="11sp" />


</RelativeLayout>


