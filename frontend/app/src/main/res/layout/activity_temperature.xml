<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemperatureActivity">


    <Button
        android:id="@+id/celsiusFahrenheitSwitchButton"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Í¦C/F"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/outdoorTempTextView"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toEndOf="@+id/indoorTempTextView"
        app:layout_constraintTop_toBottomOf="@+id/temperatureTitleTextView" />

    <TextView
        android:id="@+id/highTempRangeTextView"
        android:layout_width="82dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="8dp"
        android:text="HIGH"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/highTempEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempRangeTextView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/lowTempRangeTextView"
        android:layout_width="82dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="LOW"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/highTempRangeTextView"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempRangeTextView" />

    <TextView
        android:id="@+id/indoorTempTextView"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:ems="10"
        android:inputType="numberSigned"
        android:text="24"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greenhouseTextView" />

    <TextView
        android:id="@+id/outdoorTempTextView"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:ems="10"
        android:inputType="number"
        android:text="18"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@+id/indoorTempTextView"
        app:layout_constraintStart_toEndOf="@+id/indoorTempTextView"
        app:layout_constraintTop_toBottomOf="@+id/outdoorTextView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/temperatureTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginTop="6dp"
        android:text="TEMPERATURE"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/logoTopImageView"
        app:layout_constraintStart_toStartOf="@+id/logoTopImageView"
        app:layout_constraintTop_toBottomOf="@+id/logoTopImageView" />

    <TextView
        android:id="@+id/greenhouseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:text="GREENHOUSE"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/outdoorTextView"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperatureTitleTextView" />

    <TextView
        android:id="@+id/outdoorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="OUTDOOR"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/greenhouseTextView"
        app:layout_constraintStart_toEndOf="@+id/greenhouseTextView"
        app:layout_constraintTop_toBottomOf="@+id/temperatureTitleTextView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/logoTopImageView"
        android:layout_width="124dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="148dp"
        android:layout_marginRight="148dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/igro_logo" />

    <TextView
        android:id="@+id/tempControlTextView"
        android:layout_width="133dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="false"
        android:foregroundGravity="left"
        android:freezesText="false"
        android:gravity="start|left"
        android:paddingTop="8dp"
        android:text="HEATER CONTROL"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/lowTempRangeTextView"
        app:layout_constraintEnd_toStartOf="@+id/tempSwitch"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outdoorTempTextView"
        app:layout_constraintVertical_bias="0.317" />

    <Switch
        android:id="@+id/tempSwitch"
        android:layout_width="113dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="8dp"
        android:text="OFF / ON"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorLink="@color/colorAccent"
        android:textOff="OFF"
        android:textOn="ON"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/highTempRangeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outdoorTempTextView"
        app:layout_constraintVertical_bias="0.328" />

    <TextView
        android:id="@+id/tempRangeTextView"
        android:layout_width="181dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="TEMPERATURE RANGE"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/cardView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heaterUseHistoryButton"
        app:layout_constraintVertical_bias="0.217" />

    <ImageView
        android:id="@+id/logoBottomImageView"
        android:layout_width="61dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="164dp"
        android:layout_marginRight="164dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/igro_justleaf" />


    <EditText
        android:id="@+id/lowTempEditText"
        android:layout_width="79dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="lowerTempLimit"
        android:ems="20"
        android:gravity="bottom|center|center_horizontal|center_vertical"
        android:hint="Lower Limit"
        android:inputType="numberSigned|number|numberDecimal"
        android:saveEnabled="true"
        android:textColor="@color/colorPrimary"
        android:textIsSelectable="true"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/cardView8"
        app:layout_constraintEnd_toEndOf="@+id/lowTempRangeTextView"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lowTempRangeTextView"
        app:layout_constraintVertical_bias="0.0"
        tools:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/highTempEditText"
        android:layout_width="79dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="highTempLimit"
        android:ems="20"
        android:foregroundGravity="bottom|center_vertical|center|center_horizontal"
        android:gravity="bottom|clip_horizontal|center|center_horizontal|center_vertical"
        android:hint="Upper Limit"
        android:inputType="numberSigned|number|numberDecimal"
        android:saveEnabled="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorAccent"
        android:textIsSelectable="true"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/cardView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.899"
        app:layout_constraintStart_toEndOf="@+id/lowTempEditText"
        app:layout_constraintTop_toTopOf="@+id/lowTempEditText"
        app:layout_constraintVertical_bias="0.0"
        tools:textColor="@color/colorAccent" />


    <android.support.constraint.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.constraint.Group
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/heaterUseHistoryButton"
        android:layout_width="299dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="VIEW HEATER USE HISTORY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperatureTitleTextView" />

    <Button
        android:id="@+id/tempHistoriyButton"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="VIEW TEMPERATURE SENSOR HISTORY"
        app:layout_constraintBottom_toTopOf="@+id/logoBottomImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempRangeTextView"
        app:layout_constraintVertical_bias="0.936" />

    <Button
        android:id="@+id/setRangeTempButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="SET RANGE"
        app:layout_constraintEnd_toStartOf="@+id/highTempEditText"
        app:layout_constraintStart_toEndOf="@+id/lowTempEditText"
        app:layout_constraintTop_toBottomOf="@+id/tempRangeTextView" />

</android.support.constraint.ConstraintLayout>
