<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/uvView"
        android:layout_width="185dp"
        android:layout_height="188dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/moistureView"
        app:layout_constraintTop_toBottomOf="@+id/humidityView">

        <ImageView
            android:id="@+id/uvConditionImage"
            android:layout_width="61dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="93dp"
            app:srcCompat="@drawable/light_belowaverage" />

        <TextView
            android:id="@+id/uvDateStampTextview"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="152dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/nmButton"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="43dp"
            android:text="nm"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp" />

        <Button
            android:id="@+id/uvNumberButton"
            android:layout_width="105dp"
            android:layout_height="51dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@null"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="45sp" />

        <Button
            android:id="@+id/uvButton"
            android:layout_width="135dp"
            android:layout_height="38dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="20dp"
            android:text="UV INDEX"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/igroLogoDashView"
        android:layout_width="156dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/igro_logo" />

    <TextView
        android:id="@+id/welcomeMessageText"
        android:layout_width="200dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Welcome, MIKE!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/igroLogoDashView" />

    <android.support.v7.widget.CardView
        android:id="@+id/humidityView"
        android:layout_width="185dp"
        android:layout_height="189dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeMessageText">

        <ImageView
            android:id="@+id/humidityConditionImage"
            android:layout_width="61dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="93dp"
            app:srcCompat="@drawable/igro_humidity_high" />

        <TextView
            android:id="@+id/humDateStampTextview"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="152dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/humidityUnitsButton"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="43dp"
            android:text=" % "
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp" />

        <Button
            android:id="@+id/humidityButton"
            android:layout_width="135dp"
            android:layout_height="38dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="20dp"
            android:text="HUMIDITY"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <Button
            android:id="@+id/humidityPercentView"
            android:layout_width="114dp"
            android:layout_height="51dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@null"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="45sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/temperatureView"
        android:layout_width="185dp"
        android:layout_height="189dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        app:layout_constraintEnd_toStartOf="@+id/humidityView"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeMessageText">

        <TextView
            android:id="@+id/tempDateStampTextview"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="152dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/temp_button"
            android:layout_width="135dp"
            android:layout_height="38dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="20dp"
            android:text="TEMPERATURE"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/tempNumberView"
            android:layout_width="105dp"
            android:layout_height="51dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@null"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="45sp" />

        <Button
            android:id="@+id/celsiusFahrenheitSwitchButton"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="43dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/temperatureConditionImage"
            android:layout_width="61dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="93dp"
            app:srcCompat="@drawable/igro_temp_hot" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/moistureView"
        android:layout_width="185dp"
        android:layout_height="189dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperatureView">

        <ImageView
            android:id="@+id/soilConditionImage"
            android:layout_width="61dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="93dp"
            app:srcCompat="@drawable/igro_moisture_optimal" />

        <TextView
            android:id="@+id/moistDateStampTextView"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="152dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/soilMoistureUnitsButton"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="43dp"
            android:text=" % "
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp" />

        <Button
            android:id="@+id/moisturePercentView"
            android:layout_width="105dp"
            android:layout_height="51dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@null"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="45sp" />

        <Button
            android:id="@+id/moistureButton"
            android:layout_width="135dp"
            android:layout_height="38dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="20dp"
            android:text="SOIL MOISTURE"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/conditionView"
        android:layout_width="161dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/leafDashLogoView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moistureView">

        <TextView
            android:id="@+id/conditionTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="CONDITION"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/statusView"
        android:layout_width="173dp"
        android:layout_height="49dp"
        android:layout_marginVertical="110dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/leafDashLogoView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/conditionView"
        app:layout_constraintTop_toBottomOf="@+id/uvView"
        app:layout_constraintVertical_bias="0.494" />

    <ImageView
        android:id="@+id/leafDashLogoView"
        android:layout_width="122dp"
        android:layout_height="59dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/igro_justleaf" />

    <TextView
        android:id="@+id/cityWeatherTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <Button
        android:id="@+id/definationButton"
        android:layout_width="104dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/leafDashLogoView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toEndOf="@+id/conditionView"
        app:layout_constraintTop_toBottomOf="@+id/uvView"
        app:layout_constraintVertical_bias="0.536" />
</android.support.constraint.ConstraintLayout>