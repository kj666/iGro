<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/uvView"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/moistureView"
        app:layout_constraintTop_toBottomOf="@+id/humidityView">

        <Button
            android:id="@+id/nmButton"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="95dp"
            android:text="nm/index"
            android:textAlignment="center"
            android:textSize="12sp" />

        <Button
            android:id="@+id/uvNumberButton"
            android:layout_width="149dp"
            android:layout_height="51dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@null"
            android:ems="10"
            android:inputType="number"
            android:text="300.00"
            android:textAlignment="center"
            android:textSize="45sp" />

        <Button
            android:id="@+id/uvButton"
            android:layout_width="112dp"
            android:layout_height="38dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="UV INDEX"
            android:textColor="@color/colorPrimaryDark" />
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/igroLogoDashView"
        android:layout_width="156dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/igro_logo"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/welcomeMessageText"
        android:layout_width="200dp"
        android:layout_height="26dp"
        android:text="Welcome, MIKE!"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="71dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/humidityView"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/temperatureView"
        app:layout_constraintTop_toBottomOf="@+id/welcomeMessageText">

        <Button
            android:id="@+id/humidityButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginLeft="45dp"
            android:text="HUMIDITY"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <Button
            android:id="@+id/humidityPercentView"
            android:layout_width="149dp"
            android:layout_height="51dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="40dp"
            android:background="@null"
            android:ems="50"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="45sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/temperatureView"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        app:layout_constraintEnd_toStartOf="@+id/humidityView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeMessageText">

        <Button
            android:id="@+id/temp_button"
            android:layout_width="112dp"
            android:layout_height="38dp"
            android:layout_marginLeft="28dp"
            android:text="TEMPERATURE"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/tempNumberView"
            android:layout_width="149dp"
            android:layout_height="51dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@null"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="45sp" />

        <Button
            android:id="@+id/celsiusFahrenheitSwitchButton"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="95dp"
            android:text="Â°C/F"
            android:textAlignment="center" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/moistureView"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        app:layout_constraintEnd_toStartOf="@+id/uvView"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperatureView">

        <Button
            android:id="@+id/moisturePercentView"
            android:layout_width="149dp"
            android:layout_height="51dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:background="@null"
            android:ems="50"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="45sp" />

        <Button
            android:id="@+id/moistureButton"
            android:layout_width="112dp"
            android:layout_height="38dp"
            android:layout_marginLeft="30dp"
            android:text="SOIL MOISTURE"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/conditionView"
        android:layout_width="161dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/leafDashLogoView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moistureView">

        <TextView
            android:id="@+id/conditionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="CONDITION"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark" />
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/leafDashLogoView"
        android:layout_width="122dp"
        android:layout_height="59dp"
        app:srcCompat="@drawable/igro_justleaf"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="648dp" />

    <TextView
        android:id="@+id/cityWeatherTextView"
        android:layout_width="97dp"
        android:layout_height="26dp"
        android:text="City Weather"
        tools:layout_editor_absoluteX="306dp"
        tools:layout_editor_absoluteY="45dp" />

    <Button
        android:id="@+id/definationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/leafDashLogoView"
        app:layout_constraintTop_toBottomOf="@+id/uvView"
        tools:layout_editor_absoluteX="315dp" />
</android.support.constraint.ConstraintLayout>